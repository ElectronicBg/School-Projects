@model Book

<div>
    <dl class="row">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>Name</dt>
        <dd>@Model.Title</dd>

        <dt>Age</dt>
        <dd>@Model.Year</dd>

        <dt>Breed</dt>
        <dd>@Model.Author</dd>

        <dt>Image</dt>
        <dd>
            <img src="@Model.CoverImage" alt="Cat Image" class="img-thumbnail rounded" style="max-width: 150px;">
        </dd>
    </dl>
</div>

<a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
<a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back to list</a>
