@model Cat

@{
    ViewData["Title"] = "Delete Cat";
}

<h2>Delete Cat</h2>
<p>
    Are you sure you want to delete this
    cat?
</p>
<div>
    <h4>Cat Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Age</dt>
        <dd>@Model.Age</dd>
        <dt>Breed</dt>
        <dd>@Model.Breed</dd>
    </dl>

    <form method="post"
          action="@Url.Action("Delete","Cat",new{id=Model.ID})">

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Cat" class="btn btn-primary">
            Back to the List
        </a>
    </form>

</div>