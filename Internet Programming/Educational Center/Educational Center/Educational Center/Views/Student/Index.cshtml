@model IEnumerable<Educational_Center.Models.Student>
@{
    ViewData["Title"] = "Students List";
}

<h2>Students List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Photo</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Contact Number</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentId</td>
                <td><img src="@student.Photo" alt="Student Photo" width="50" height="50" /></td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>@student.Age</td>
                <td>@student.ContactNumber</td>
                <td>@student.Course.CourseName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Student</a>

