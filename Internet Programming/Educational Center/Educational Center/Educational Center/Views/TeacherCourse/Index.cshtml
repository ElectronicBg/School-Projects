@model IEnumerable<Educational_Center.Models.TeacherCourse>
@{
    ViewData["Title"] = "Teacher Courses List";
}

<h2>Teacher Courses List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Teacher Name</th>
            <th>Course Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacherCourse in Model)
        {
            <tr>
                <td>@teacherCourse.Teacher.FirstName @teacherCourse.Teacher.LastName</td>
                <td>@teacherCourse.Course.CourseName</td>
                <td>
                    <a asp-action="Delete" asp-route-teacherId="@teacherCourse.TeacherId" asp-route-courseId="@teacherCourse.CourseId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Teacher Course</a>
